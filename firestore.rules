rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Tüm kimlik doğrulanmış kullanıcılar için kendi verilerini okuma/yazma izni
    match /users/{userId} {
      // Kullanıcılar kendi verilerine erişebilir
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Kullanıcıların favorites alt koleksiyonu
      match /favorites/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Genel erişimli koleksiyonlar
    match /travels/{document=**} {
      // Herkes okuyabilir (public travel data)
      allow read: if true;
      // Sadece giriş yapmış kullanıcılar yazabilir
      allow write: if request.auth != null;
    }
    
    // Diğer tüm erişimleri reddet
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
